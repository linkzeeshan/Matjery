@model Nop.Web.Areas.Admin.Models.Sms.QueuedSmsModel
@inherits Nop.Web.Framework.Mvc.Razor.NopRazorPage<TModel>
@using Nop.Web.Framework.UI

@{
    //page title
    ViewBag.Title = T("Admin.System.QueuedSms.EditQueuedSmsDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Queued sms");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.System.QueuedSms.EditQueuedSmsDetails")
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("Admin.System.QueuedSms.BackToList").Text, "List")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="requeue" class="btn bg-green">
                <i class="fa fa-clone"></i>
                @T("Admin.System.QueuedSms.Requeue")
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="queuedSms-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="queuedSms-delete" />
