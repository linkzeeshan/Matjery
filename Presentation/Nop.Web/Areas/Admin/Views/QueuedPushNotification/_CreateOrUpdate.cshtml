@model QueuedPushNotificationModel

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)
@Html.HiddenFor(model => model.RegisterationId)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.PriorityName" />
                        </div>
                        <div class="col-md-9">
                            <input asp-for="PriorityName" type="hidden" />
                            <div class="form-text-row">@Model.PriorityName</div>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.Title" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.Title" />
                            <span asp-validation-for="@Model.Title"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.Message" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.Message" asp-template="RichEditor" />
                            <span asp-validation-for="@Model.Message"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.PhoneNumber" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.PhoneNumber" />
                            <input asp-for="PhoneNumber" type="hidden" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.CreatedOn" />
                        </div>
                        <div class="col-md-9">
                            <div class="form-text-row">@Model.CreatedOn</div>
                            <input asp-for="CreatedOn" type="hidden" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.SentTries" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="@Model.SentTries" />
                            <span asp-validation-for="@Model.SentTries"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-label asp-for="@Model.SentOn" />
                        </div>
                        <div class="col-md-9">
                            @if (Model.SentOn.HasValue)
                            {
                            <div class="form-text-row">@Model.SentOn</div>
                                <input asp-for="SentOn" type="hidden" />
                            }
                            else
                            {
                                @T("Admin.System.QueuedSmss.Fields.SentOn.NotSent")
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>