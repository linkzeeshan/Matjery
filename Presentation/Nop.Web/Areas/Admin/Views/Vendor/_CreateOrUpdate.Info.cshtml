@model VendorModel
@using Nop.Core.Domain.Vendors;
<script>
    $(document).ready(function() {
        $("#RegisterationTypeId" ).change(function() {
            if ( $(this).val()==1) {
                $("#FoundationTypediv").css("display","none");
                $("#FoundationAprovalStatusIdiv").removeAttr("style");
                $("#SupportedByFoundationIddiv").removeAttr("style");
            }else{
                $("#FoundationTypediv").removeAttr("style");
                $("#FoundationAprovalStatusIdiv").css("display","none");
                $("#SupportedByFoundationIddiv").css("display","none");
            };
        });
        if (@Model.RegisterationTypeId == 2)
        {

            $("#FoundationTypediv").removeAttr("style");
            $("#SupportedByFoundationIddiv").css("display","none");
            $("#FoundationAprovalStatusIdiv").css("display","none");
        }
    });

</script>

<div class="panel-body">
    <div class="sub-panel">
