@model IList<CampaignModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="home-page-campaigns item-grid">
        @foreach (var item in Model)
        {
            <a href="@Url.Action("Campaign", "Catalog", new { campaignId = item.Id })" title="@item.PictureModel.Title">
                <img alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
            </a>
        }
    </div>
}