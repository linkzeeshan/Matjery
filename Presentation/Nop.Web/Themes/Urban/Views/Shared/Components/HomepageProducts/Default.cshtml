@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid bestsellers">
        
        <div class="item-grid">
            <div class="title">
                <strong>@T("HomePage.Products")</strong>    
            </div>
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}