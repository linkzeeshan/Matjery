@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="product-grid home-page-product-grid home-page-discounted-grid">
        <div class="item-grid owl-carousel">
            @*<div class="title">
                    <strong>@T("Discounted")</strong>
                </div>*@
            @foreach (var item in Model)
            {
                <div class="item-box">
                    @await Html.PartialAsync("_ProductBox", item)
                </div>
            }
        </div>
    </div>
}
